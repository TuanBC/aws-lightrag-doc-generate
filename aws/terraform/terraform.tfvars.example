# =============================================================================
# Technical Document Generator - Terraform Variables
# Copy this file to terraform.tfvars and fill in your values
# =============================================================================

# AWS Region for all resources
aws_region = "us-east-1"

# =============================================================================
# Context7 Configuration (Optional)
# Get API key from https://context7.com/dashboard for higher rate limits
# =============================================================================
context7_api_key = ""

# =============================================================================
# Bedrock Configuration
# =============================================================================

# Chat model for document generation
bedrock_model_id = "amazon.nova-pro-v1:0"

# Embedding model for Knowledge Base (do not change unless needed)
bedrock_embed_model_id = "amazon.titan-embed-text-v2:0"

# Bedrock region (can be different from main region if model not available)
bedrock_region = "us-east-1"

# =============================================================================
# OpenRouter Configuration (Optional - fallback LLM)
# Get API key from https://openrouter.ai/keys
# =============================================================================
openrouter_api_key = ""
